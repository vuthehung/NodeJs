<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <form action="/post-update" method="post" class="update-user-container">
        <div>
            <label>First Name:</label>
            <input name="firstname" value="<%= dataUser.firstname %>">
        </div>
        <div>
            <label>Last Name:</label>
            <input name="lastname" value="<%= dataUser.lastname %>">
        </div>
        <div>
            <label>Email:</label>
            <input name="email" value="<%= dataUser.email %>">
        </div>
        <div>
            <label>Address:</label>
            <input name="address" value="<%= dataUser.address %>">
        </div>
        <input name="id" hidden value="<%= dataUser.id%>">
        <div>
            <button type="submit" class="btn-save">Save</button>
        </div>
    </form>
</body>
</html>